@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="homeIntro">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 introLeft">
                    <h1>Bettter digital experience with Presento</h1>
                    <h2>We are team of talented designers making websites with Bootstrap</h2>
                    <button class="btn btn-primary">Get Started</button>
                </div>
            </div>
        </div>
    </section>


    <section id="carousel" class="mt-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="owl-carousel owl-theme">
                        @foreach (var person in Model)
	{
                        <div class="">
                            <div class="card">
                                <div class="card-body">
                                    <img class="card-img-top"
                                         src="~/assets/img/@person.Image"
                                         style="width: 80px;" alt="Card image cap">
                                    <h5 class="card-title">@person.Fullname</h5>
                                    <h4>Freelancer</h4>
                                    <p class="card-text">
                                        <i class="fas fa-quote-left"></i>
                                        @person.Content
                                        <i class="fas fa-quote-right"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
	}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="card" class="mt-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center head">
                    <h4>Card <span>Animation</span></h4>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-lg-4 col-md-6 col-sm-12 ">
